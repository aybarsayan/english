generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model VoiceSession {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  studentName String    // Normalized: "ali yilmaz" (gruplama icin)
  firstName   String    // Display: "Ali"
  lastName    String    // Display: "Yilmaz"
  grade       Int       // 1-8
  section     String    // A-K
  messages    Message[]
  duration    Int       // saniye
  createdAt   DateTime  @default(now())

  @@index([grade, section])
  @@index([studentName])
}

type Message {
  id     String
  text   String
  isUser Boolean
}
